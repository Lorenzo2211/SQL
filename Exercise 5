CREATE VIEW MEAL_ORDER_WITH_DETAILS AS 
    SELECT MO.*, M.PRICE, M.CALORIES FROM MEAL_ORDER MO, MEAL M 
    WHERE MO.MEAL_NAME = M.NAME;
    
CREATE TABLE APPROXIMATE_TIME (
  OUR_TIME TIMESTAMP DEFAULT NOW()
);

INSERT INTO APPROXIMATE_TIME (OUR_TIME) 
    VALUES (NOW());

SELECT
CONCAT('Name = ', MEAL_NAME ) AS NAME_FORMATTED,
LOWER(MEAL_NAME) AS LOWERCASE_NAME,
UPPER(MEAL_NAME) AS UPPERCASE_NAME,
TRIM(MEAL_NAME) AS TRIMMED_NAME,
LENGTH(MEAL_NAME) AS MEAL_NAME_LENGTH,
SUBSTRING(MEAL_NAME , 5) AS WITHOUT_FIRST_FIVE_LETTERS_OF_MEAL,
DATE_ADD(DATE_SUB(TIME_MEAL_ORDERED , INTERVAL 3 DAY ),INTERVAL 5 DAY) AS FORMATTED_DATE
FROM MEAL_ORDER_WITH_DETAILS;

SELECT
FORMAT(PRICE , 2) AS FORMATTED_PRICE,
ROUND(PRICE + 1, 0) AS ROUNDED_PRICE
FROM MEAL;

SELECT
DATE_SUB(DATE_SUB(DATE_ADD(DATE_ADD(NOW(), INTERVAL 11 DAY), INTERVAL 5 MONTH), INTERVAL 16 HOUR), INTERVAL 59 MINUTE) AS BIRTHDAY_DATE;
FROM APPROXIMATE_TIME;
