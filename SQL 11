CREATE TABLE MEAL (
  MEAL_ID INT NOT NULL AUTO_INCREMENT,
  NAME VARCHAR(255),
  PRICE DOUBLE,
  CALORIES INT,
  PRIMARY KEY (MEAL_ID)
);

CREATE TABLE INGREDIENT (
  INGREDIENT_ID INT NOT NULL AUTO_INCREMENT,
  NAME VARCHAR(255),
  CONTAINS_LACTOSE BOOLEAN,
  VEGETARIAN BOOLEAN,
  VEGAN BOOLEAN,
  GLUTEN_FREE BOOLEAN,
  PRIMARY KEY (INGREDIENT_ID)
);


CREATE TABLE MEAL_INGREDIENT (
  MEAL_ID INT,
  INGREDIENT_ID INT
);


