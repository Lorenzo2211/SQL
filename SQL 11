SELECT MEAL.MEAL_ID, INGREDIENT.INGREDIENT_ID FROM MEAL
INNER JOIN INGREDIENT ON MEAL.MEAL_ID = INGREDIENT.INGREDIENT_ID;

SELECT MEAL.MEAL_ID, INGREDIENT.INGREDIENT_ID FROM MEAL
LEFT JOIN INGREDIENT ON MEAL.MEAL_ID = INGREDIENT.INGREDIENT_ID;

SELECT MEAL.MEAL_ID, INGREDIENT.INGREDIENT_ID FROM MEAL
RIGHT JOIN INGREDIENT ON MEAL.MEAL_ID = INGREDIENT.INGREDIENT_ID;

SELECT MEAL.MEAL_ID, INGREDIENT.INGREDIENT_ID FROM MEAL
LEFT JOIN INGREDIENT ON MEAL.MEAL_ID = INGREDIENT.INGREDIENT_ID
WHERE INGREDIENT.INGREDIENT_ID IS NULL;

SELECT MEAL.MEAL_ID, INGREDIENT.INGREDIENT_ID FROM MEAL
RIGHT JOIN INGREDIENT ON MEAL.MEAL_ID = INGREDIENT.INGREDIENT_ID
WHERE INGREDIENT.INGREDIENT_ID IS NULL;

SELECT MEAL.MEAL_ID, INGREDIENT.INGREDIENT_ID FROM MEAL
LEFT JOIN INGREDIENT ON MEAL.MEAL_ID = INGREDIENT.INGREDIENT_ID
UNION
SELECT MEAL.MEAL_ID, INGREDIENT.INGREDIENT_ID FROM MEAL
RIGHT JOIN INGREDIENT ON MEAL.MEAL_ID = INGREDIENT.INGREDIENT_ID;

SELECT MEAL.MEAL_ID, INGREDIENT.INGREDIENT_ID FROM MEAL
LEFT JOIN INGREDIENT ON MEAL.MEAL_ID = INGREDIENT.INGREDIENT_ID
UNION
SELECT MEAL.MEAL_ID, INGREDIENT.INGREDIENT_ID FROM MEAL
RIGHT JOIN INGREDIENT ON MEAL.MEAL_ID = INGREDIENT.INGREDIENT_ID
WHERE MEAL.MEAL_ID IS NULL OR INGREDIENT.INGREDIENT_ID IS NULL;
